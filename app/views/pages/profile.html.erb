<div class="container">
  <h1><%="Hello, #{@user.first_name}. " %></h1>
  <h3>Here you can find all your books</h3>


  <% @books.each do |book| %>
    <div class="card" style="width: 9rem;">
      <img class="card-img-top" src="" alt="Book cover">
      <div class="card-body text-center">
        <p class="card-text"><%= link_to 'more', book_path(book) %></p>
      </div>
    </div>
  <% end %>

</div>
