
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">
      <h1> UPDATE MY BOOK</h1>

        <%= simple_form_for [ @book ] do |f| %>
          <%= f.input :title %>
          <%= f.input :author %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photo, as: :file %>

          <%= f.submit "Update book", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Delete", book_path(@book), method: :delete,
                    data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
