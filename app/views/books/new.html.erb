<div class="box-root padding-top--48 padding-bottom--24 flex-flex flex-justifyContent--center">
<h1><a href="#" rel="dofollow">Bookstory</a></h1>
</div>
<div class="formbg-outer">
<div class="formbg">
  <div class="formbg-inner padding-horizontal--48">
    <span class="padding-bottom--15">Sign in to your account</span>

      <%= simple_form_for(resource, as: resource_name, id: "stripe-login", url: session_path(resource_name)) do |f| %>
        <div class="field padding-bottom--24">
          <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
        </div>

        <div class="field padding-bottom--24">
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <div class="reset-pass">
        </div>

        <div class="field field-checkbox padding-bottom--24 flex-flex align-center">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

      <div class="field padding-bottom--24">
        <%= f.button :submit, "Log in" %>
      </div>

      <% end %>

  </div>
</div>











<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">

      <h1> SHARE A STORY WITH THE WORLD </h1>

      <%= simple_form_for [ @book ] do |f| %>
        <%= f.input :title %>
        <%= f.input :author %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>

        <%= f.submit "Sell this book", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
