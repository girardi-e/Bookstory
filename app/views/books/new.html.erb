<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">

      <h1> SHARE A STORY WITH THE WORLD </h1>

      <%= simple_form_for [ @book ] do |f| %>
        <%= f.input :title %>
        <%= f.input :author %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>

        <%= f.submit "Sell this book", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
